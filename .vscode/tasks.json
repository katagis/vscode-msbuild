{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_step1",
            "type": "shell",
            "command": "md -Force build | Out-Null",
        },
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "/EHsc",
                "/Zi",
                "/std:c++17",
                "/Fobuild/",
                "/Fdbuild/",
                "/Fe:",
                "build/main.exe",
                "main.cpp"
            ],
            "group":  {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile",
            "dependsOn":["build_step1"]
        }
    ]
}